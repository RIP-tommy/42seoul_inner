{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                // "-Wall",
                // "-Wextra",
                // "-Werror",
                "${fileDirname}/main.c",
                "${fileDirname}/get_next_line.c",
                "${fileDirname}/get_next_line_utils.c",
                "-D",
                "BUFFER_SIZE=8",
                "-o",
                "${fileDirname}/main"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "exec",
            "type": "shell",
            "command": "${fileDirname}/main",
            "group": "build"
        }
    ]
}