{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build gnl_test",
      "command": "/usr/bin/gcc",
      "args": [
        "-I${fileDirname}",
        "-g",
        "${fileDirname}/get_next_line.c",
        "${fileDirname}/get_next_line_utils.c",
        "${fileDirname}/main.c",
        "-D",
        "BUFFER_SIZE=2",
        "-o",
        "${fileDirname}/main"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
